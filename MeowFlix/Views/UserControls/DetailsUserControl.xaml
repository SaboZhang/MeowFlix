<?xml version="1.0" encoding="utf-8" ?>
<UserControl x:Class="MeowFlix.Views.DetailsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="using:Microsoft.Xaml.Interactivity"
             xmlns:ic="using:Microsoft.Xaml.Interactions.Core"
             xmlns:local="using:MeowFlix.Common"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="using:MeowFlix.Views"
             xmlns:wuc="using:WinUICommunity"
             xmlns:model="using:MeowFlix.Database.Tables"
             x:DefaultBindMode="OneWay"
             mc:Ignorable="d">

    <Grid>
        <views:ItemUserControl Title="{x:Bind Title}"
                               Poster="{x:Bind Poster}"
                               BaseMedia="{x:Bind BaseMedia}"
                               DateTime="{x:Bind DateTime}"
                               Year="{x:Bind Year}"
                               FilePath="{x:Bind FilePath}" />
    </Grid>

</UserControl>
